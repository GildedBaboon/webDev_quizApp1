<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalRight"
        android:text="@string/correctNum"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalWrong"
        android:text="@string/wrongNum"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="40dp"
        android:layout_below="@id/totalRight"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalWrong"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Go Back Home"
        android:id="@+id/btnNavHome"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnNavHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Update Wrong and Right Answers"
        android:id="@+id/updateScores"
        />

</RelativeLayout>